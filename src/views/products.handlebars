
<h1>Bienvendio {{email}} tu rol es {{role}}</h1>
<button onclick="location.href='/users/logout'">Logout</button>
<h2>Listado de Productos</h2>
{{#if listJson.length}}
    {{#each listJson}}
        <div id="productList">
            <p>Id: {{_id}}</p>
            <p>Producto: {{title}}</p>
            <p>Descripción: {{description}}</p>
            <p>Código: {{code}}</p>
            <p>Precio: $ {{price}}</p>
            <p>Estado: {{status}}</p>
            <p>Stock: {{stock}}</p>
            <p>Categoria: {{category}}</p>
            <img src={{thumbnail}} alt="imagen"></img>
        </div>
        <div>
            <button>Agregar</button>
        </div>
    {{/each}}
    {{else}}
        <h3>No hay ningún producto</h3>
{{/if}} 
<footer>
    <button id="btn-ant"{{#if products.hasPrevPage}} onclick="goToPage({{products.prevPage}})" {{else}} disabled {{/if}}>Anterior</button>
    <span id="pagina">{{products.page}}</span>
    <button id="btn-next" {{#if products.hasNextPage}} onclick="goToPage({{products.nextPage}})" {{else}} disabled {{/if}}>Siguiente</button>
</footer>

